{
  "name": "hawk.desktop",
  "version": "0.0.1",
  "description": "Desktop version of hawk.garage",
  "license": "UNLICENSED",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "submodule:init": "git submodule update --init --recursive",
    "submodule:build": "cd hawk.garage && yarn install && yarn build",
    "submodule:update": "git submodule foreach git pull origin master",
    "submodule:prepare": "yarn submodule:init && yarn submodule:update && yarn submodule:build",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "electron:prebuild": "rm -rf dist/ && yarn submodule:prepare",
    "electron:build": "yarn electron:prebuild && electron-builder"
  },
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^22.10.5",
    "eslint": "^5.16.0",
    "eslint-config-codex": "github:codex-team/eslint-config",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.8",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.2"
  },
  "build": {
    "appId": "so.hawk.desktop",
    "productName": "Hawk Desktop",
    "mac": {
      "category": "public.app-category.reference"
    },
    "dmg": {
      "title": "Hawk Desktop"
    },
    "files": [
      "**/*"
    ]
  }
}
